{
  "browser_specific_settings": {
    "gecko": {
      "id": "betterread-by-athanasiosem@konfou.xyz",
      "strict_min_version": "101.0"
    }
  },
  "manifest_version": 3,
  "name": "betterread",
  "version": "1.0.0",
  "description": "Simple web extension that changes the layout of a website for better reading experience.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "action": {
    "default_title": "betterread",
    "default_icon": {
      "16": "images/logo16.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  }
}
